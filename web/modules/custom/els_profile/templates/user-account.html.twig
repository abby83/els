<section class="about profile-account" data-aos="fade-up">
      <div class="container">
		<div class="row">
		  <div class="section-title">
				<h2>{{user.company_name}}</h2>
		  </div>
		  <div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
			  <div class="col mb-4 mb-lg-0">
				<div class="card mb-3" style="border-radius: .5rem;">
				  <div class="row g-0">
					<div class="col-md-4 gradient-custom text-center text-white"
					  style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
					  <img src="{{user.user_picture}}"
						alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
					  <h5>{{user.company_name}}</h5>
					  <a href="{{base_path}}/user/{{user.uid}}/edit"><i class="far fa-edit mb-5">&nbsp;</i></a>
					</div>
					<div class="col-md-8">
					  <div class="card-body p-4">
						<h6>{{ 'Profile Information' | t }}</h6>
						<hr class="mt-0 mb-4">
						<div class="row pt-1">
						  <div class="col-6 mb-3">
							<h6>{{ 'Contact Person' | t }}</h6>
							<p class="text-muted">{{user.contact_fullname}}</p>
						  </div>
						  <div class="col-6 mb-3">
							<h6>{{ 'Phone Number' | t }}</h6>
							<p class="text-muted">{{user.contact_number}}</p>
						  </div>
						  <div class="col-6 mb-3">
							<h6>{{ 'Contact Email' | t }}</h6>
							<p class="text-muted">{{user.mail}}</p>
						  </div>
						  <div class="col-6 mb-3">
							<h6>{{ 'Company Address' | t }}</h6>
							<p class="text-muted">{{user.contact_address}}</p>
						  </div>
						</div>
						<h6>{{ 'Trip Summary' | t }}</h6>
						<hr class="mt-0 mb-4">
						<div class="row pt-1">
						  <div class="col-6 mb-3">
							<h6>Last Trip </h6>
							<p class="text-muted">NA</p>
						  </div>
						  <div class="col-6 mb-3">
							<h6>Total Trips</h6>
							<p class="text-muted">0</p>
						  </div>
						</div>
						</div>
					</div>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		</div>
	</div>
</section>

<div id="trip">
	<section class="profile-trip" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
		<div class="container">
			<button type="button" class="btn btn-primary btn-lg btn-block profile-button">Click to Visit My Trips</button>
		</div>
	</section>
</div>